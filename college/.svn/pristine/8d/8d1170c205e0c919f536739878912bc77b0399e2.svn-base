@import "public";
.specialty-banner{
  min-width: 1200px;
}
.specialty-nav{
  margin: 20px;
}
img{
  width: 100%;
  height: 100%;
}
.specialty-content{
  margin: 60px 190px;
}
.specialty-content-title{
  padding-left:10px ;
  border-left: 4px solid @light-blue;
}
.faculty-list-tittle{
  display: inline-block;
  padding-left: 40px;
  width: 200px;
  height: 45px;
  background: #3d85d6 ;
  line-height: 45px;
}
.faculty-list-content{
  display: inline-block;
  margin: -1px 0;
  padding-left: 40px;
  width: 200px;
  height: 45px;
  line-height: 45px;
  border: 1px solid @gray;
  border-top: 0;
  &:hover{
    color: @light-blue;
    background: #e2dede;
  }
}
.faculty-content{
  margin-bottom: 90px;
}
.selected{
  color: @light-blue;
  background: #e2dede;
}
.base-content{
  margin-top: 60px;
  width: 1200px;
}
.base-pic-warp{
  margin-left: 30px;
  width: 300px;
  height: 230px;
}
.communication-pic{
  margin-bottom: 10px;
  width: 290px;
  height: 155px;
}
.communication-content{
  display: inline-block;
  margin: 20px 0;
  height: 300px;
}
.communication-title{
  display: table;
  margin-bottom: 10px;
  overflow: hidden;
}
.communication-date{
  float: left;
  margin-right: 10px;
  font-size: 23.35px;
  text-align: center;
  border-radius:14% ;
  background: @light-blue;
  behavior: url(../css/PIE.htc);
}
.communication-date-date{
  width: 66px;
  height: 44px;
  border-bottom:solid 1px @white ;
}
.communication-date-year{
  padding-top: 4px;
  height: 24px;
}
.communication-title-content{
  display: table-cell;
  top: 50%;
  width: 215px;
  vertical-align: middle;
  &:hover{
    color: @light-blue;
  }
}
.communication-text{
  display: inline-block;
  width: 290px;
  &:hover{
    color: @light-blue;
  }
}
.communicationContent{
  margin-top: 40px;
  margin-bottom: 90px;
}