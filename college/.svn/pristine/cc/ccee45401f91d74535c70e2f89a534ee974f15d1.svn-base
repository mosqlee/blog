@import url(public.less);
@import url(layout.less);
.banner{
  position: relative;
  overflow: hidden;
  width: 1200px;
  height: 600px;
  ul{
    height: 600px;
    padding-left: 0;
  }
  li {
    .float-left;
    list-style: none;
    img{
      height: 600px;
    }
  }
  .dots{
    position: absolute;
    right: 30px;
    bottom:10px;
    left:auto;

  }    
  .dot{  
      display:inline-block; 
      width:14px;    
      height:14px;    
      font-size:0px;    
      line-height:0px;    
      margin-right:10px;    
      cursor:pointer;
      .border(1px,@white);  
      // bbbbbbbbbbbbb
      border-radius:8px;    
  }    
  .dot.active{
    background-color: @white;
  }
}
.unslider-arrow{
  position: absolute;
  top: 275px;
  display: block;
  padding: 10px 18px;
  width: 50px;
  height: 50px;
  // bbbbbbbbbbbbbbbbbbbbb
  border-radius: 7px;
  background: @black;
  background:rgba(0,0,0,0.1); 
  /* IE*/  
  filter: progid:DXImageTransform.Microsoft.gradient(startcolorstr=#19000000,endcolorstr=#19000000);
  span {
    display: inline-block;
    width: 15px;
    height: 28px;
    background: url('../imgs/sprite.png') no-repeat;
  }
  &:hover{
    background:rgba(255,255,255,0.8); 
    /* IE 4-9 */  
    filter: progid:DXImageTransform.Microsoft.gradient(startcolorstr=#C8000000,endcolorstr=#C8000000);
  }
}
.prev{
  left: 20px;
  span {
    background-position: -181px 0;
  }
  &:hover{
   span{
    background-position: -167px 0;
    }
  }
}
.next{
  right: 20px;
  span{
    background-position: -136px 0;
  }
  &:hover{
   span{
    background-position: -151px 0;
    }
  }
}
   